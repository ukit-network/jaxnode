{{!< LAYOUT}}

<div class="col-md-12">
    <h1>{{title}}</h1>    
    <img alt="Example Image" src="{{data.heroimage}}" class="img-responsive" />
    <br />
    <p>
        {{data.description}}
    </p>
    <h3>GitHub</h3>
    <p>
        <a href="{{data.githuburl}}" target="_blank" data-popup="true">{{data.githuburl}}</a>
    </p>
    <h4>How to install</h4>
    <p>
        {{#if data.displayappstore}}
            <a href="{{data.installurl}}" target="_blank" data-popup="true">
                <img src="/images/apple.png+@2x.png" alt="iTunes App Store" class="img-responsive" />
            </a>
        {{/if}}
        {{#if data.displaygoogleplay}}
            <a href="{{data.installurl}}" target="_blank" data-popup="true">
                <img src="/images/google.png+@2x.png" alt="Google Play Store" class="img-responsive" />
            </a>
        {{/if}}
        Install {{title}} by going to this <a href="{{data.installurl}}" target="_blank" data-popup="true">page</a>.
    </p>
    <p>
        <blockquote>
            {{data.howtoinstall}}
        </blockquote>
    </p>
</div>
